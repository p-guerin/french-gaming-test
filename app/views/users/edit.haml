%h2 Edit your profile

= form_for @user do |f|
  = f.label :username
  = f.text_field :username

  = f.label :email
  = f.email_field :email

  = f.label :age
  = f.text_field :age

  = f.label :city
  = f.text_field :city

  = f.label :country
  = f.text_field :country

  = f.label :image
  = f.text_field :image

  = f.label :steam
  = f.text_field :steam

  = f.label :facebook
  = f.text_field :facebook

  = f.label :twitter
  = f.text_field :twitter

  = f.label :youtube
  = f.text_field :youtube

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation, "Confirmation"
  = f.password_field :password_confirmation

  = f.submit "Save changes", class: "btn btn-primary"